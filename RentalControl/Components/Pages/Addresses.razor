@page "/addresses"

<PageTitle>Direcciones</PageTitle>

@if (AddressesList is null)
{
    <MudProgressCircular Color="Color.Default" Indeterminate="true" />
}
else
{
    <MudDataGrid Items="@AddressesList">
        <Columns>
            <PropertyColumn Property="x => x.Street"/>
            <PropertyColumn Property="x => x.Number" />
            <PropertyColumn Property="x => x.Neighborhood" />
            <PropertyColumn Property="x => x.City" />
            <PropertyColumn Property="x => x.State" />
            <PropertyColumn Property="x => x.ZipCode" />
        </Columns>
    </MudDataGrid>
}
